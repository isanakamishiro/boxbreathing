
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:m="urn:import:gwt.material.design.client.ui"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="urn:import:gwt.material.design.client.ui https://isanakamishiro.github.io/gmdschemas/2.0/gwt-material-ui.xsd">

    <ui:with field="messages" type="net.isanakamishiro.boxbreathing.resources.message.AppMessages" />

    <ui:style>
        .top_panel {
        padding-top : 0%;
        }

        .box_panel {
        display: inline-block;
        width: 208px;
        height: 208px;
        text-align:center;
        line-height: 208px;
        vertical-align: middle;
        border: medium dashed #ffffff;
        }

        .box {
        transform: translateX(-90px);

        }

        .outer_box_panel {
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        margin: auto;
        width: 208px;
        height: 208px;
        }

    </ui:style>

    <m:MaterialRow ui:field="mainPanel" backgroundColor="GREY_LIGHTEN_1" addStyleNames="{style.top_panel}">
        <m:MaterialColumn grid="s12 m8 l6" offset="m2 l3">
            <m:MaterialPanel ui:field="onlinePanel" textAlign="CENTER" visible="true">
                <m:MaterialPanel textAlign="CENTER" layoutPosition="RELATIVE">

                    <m:MaterialPanel addStyleNames="{style.box_panel}" >
                        <m:MaterialIcon ui:field="breathingImage" opacity="1.0"
                                        iconType="CHECK_BOX_OUTLINE_BLANK" iconColor="WHITE" addStyleNames="{style.box}"/>
                    </m:MaterialPanel>

                    <m:MaterialPanel >
                        <m:MaterialLabel ui:field="countLabel" text="" textColor="BLUE" fontSize="2.4em"/>
                    </m:MaterialPanel>

                </m:MaterialPanel>

                <m:MaterialLabel ui:field="stepLabel" text="Starting..." textColor="BLUE" fontSize="0.8em" marginTop="20" width="100%"/>

            </m:MaterialPanel>

        </m:MaterialColumn>

    </m:MaterialRow>
</ui:UiBinder>
