<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:m="urn:import:gwt.material.design.client.ui"
             xmlns:ma="urn:import:gwt.material.design.addins.client"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="urn:import:gwt.material.design.client.ui https://isanakamishiro.github.io/gmdschemas/2.0/gwt-material-ui.xsd">

    <m:MaterialRow paddingTop="120">
        <m:MaterialColumn grid="s12 m6 l4" offset="m3 l4">

            <m:MaterialPanel ui:field="onlinePanel" textAlign="CENTER">
                <m:MaterialPanel textAlign="CENTER" layoutPosition="RELATIVE">
                    <m:MaterialIcon ui:field="breathingImage" marginTop="40" textColor="BLUE_DARKEN_1" iconType="DONUT_LARGE" fontSize="8em" opacity="0.0"/>
                    <m:MaterialLabel ui:field="countLabel" text="" textColor="BLUE" fontSize="2em"/>
                </m:MaterialPanel>
                <m:MaterialLabel ui:field="stepLabel" text="Starting..." textColor="BLUE" fontSize="0.8em" marginTop="20"/>
            </m:MaterialPanel>

        </m:MaterialColumn>

        <m:MaterialFAB>
            <m:MaterialButton ui:field="btnAbout" iconType="LIVE_HELP" waves="DEFAULT"
                              type="FLOATING" size="LARGE" backgroundColor="PINK" href="http://quietkit.com/box-breathing/"/>
        </m:MaterialFAB>
    </m:MaterialRow>
</ui:UiBinder>
