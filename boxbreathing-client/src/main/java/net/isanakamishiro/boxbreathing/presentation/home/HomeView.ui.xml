<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:m="urn:import:gwt.material.design.client.ui"
             xmlns:ma="urn:import:gwt.material.design.addins.client"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="urn:import:gwt.material.design.client.ui https://isanakamishiro.github.io/gmdschemas/2.0/gwt-material-ui.xsd">

    <ui:with field="messages" type="net.isanakamishiro.boxbreathing.resources.message.AppMessages" />

    <ui:style>

        .circle{
        display: inline-block;
        width: 160px;
        height: 160px;
        text-align:center;
        line-height: 160px;
        vertical-align: middle;
        border-radius: 50%;
        border: solid 3px;
        }

        .counter_panel {
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        margin: auto;
        width: 80%;
        height: 50px;
        }

        .outer_circle_panel {
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        margin: auto;
        width: 160px;
        height: 160px;
        }

    </ui:style>

    <m:MaterialRow paddingTop="100">
        <m:MaterialColumn grid="s12 m6 l4" offset="m3 l4">
            <m:MaterialPanel ui:field="startingPanel" textAlign="CENTER" marginTop="120" visible="false">
                <m:MaterialButton ui:field="startingButton" text="{messages.startBoxBreathing}" />
            </m:MaterialPanel>

            <m:MaterialPanel ui:field="onlinePanel" textAlign="CENTER" marginTop="40" visible="true">
                <m:MaterialPanel textAlign="CENTER" layoutPosition="RELATIVE">
                    <!--<m:MaterialIcon ui:field="breathingImage" textColor="BLUE_DARKEN_1" iconType="DONUT_LARGE" fontSize="12em" paddingTop="6" opacity="0.0"/>-->
                    <m:MaterialIcon ui:field="breathingImage" textColor="BLUE_DARKEN_1" opacity="0.0" addStyleNames="{style.circle}"/>
                    <m:MaterialPanel addStyleNames="{style.counter_panel}" >
                        <m:MaterialLabel ui:field="countLabel" text="" textColor="BLUE" fontSize="2.4em"/>
                    </m:MaterialPanel>
                    <m:MaterialPanel addStyleNames="{style.outer_circle_panel}" >
                        <m:MaterialIcon opacity="0.2" addStyleNames="{style.circle}"/>
                    </m:MaterialPanel>
                </m:MaterialPanel>
                <m:MaterialLabel ui:field="stepLabel" text="Starting..." textColor="BLUE" fontSize="0.8em" marginTop="20"/>
            </m:MaterialPanel>

        </m:MaterialColumn>

        <m:MaterialFAB>
            <m:MaterialButton ui:field="btnAbout" iconType="LIVE_HELP" waves="DEFAULT"
                              type="FLOATING" size="LARGE" backgroundColor="PINK" href="http://quietkit.com/box-breathing/"/>
        </m:MaterialFAB>
    </m:MaterialRow>
</ui:UiBinder>
